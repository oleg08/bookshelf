<h2>Add book</h2>

<% unless params.valid? %>
  <div class="errors">
    <h3>There was a problem with your submission</h3>
    <ul>
      <% params.error_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%=
  form_for :book, routes.books_path do

    div class: 'row' do
      div class: 'col-md-4' do
        div class: 'input' do
          label      :title
          text_field :title, class: 'form-control'
        end
      end

      div class: 'col-md-4' do
        div class: 'input' do
          label      :author
          text_field :author, class: 'form-control'
        end
      end
    end

    div class: 'row mt-4' do
      div class: 'col-md-4' do
        div class: 'controls' do
          submit 'Create Book', class: 'btn btn-success'
        end
      end
    end
  end
%>
