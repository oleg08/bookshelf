<h1>Bookshelf</h1>
<h2>All books</h2>

<% if books.any? %>
  <div id="books">
    <ul class="list-group">
      <% books.each do |book| %>
        <li class="list-group-item">
          <div class="book">
            <h2><%= book.title %></h2>
            <p><%= book.author %></p>
          </div>
        </li>
      <% end %>
    </ul>

  </div>
<% else %>
  <p class="placeholder">There are no books yet.</p>
<% end %>
